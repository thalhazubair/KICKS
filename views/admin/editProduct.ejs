<%- include('../partials/adminPartial.ejs') %>
<section class="text-center text-lg-start">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>

  <!-- Jumbotron -->
  <div class="container py-4 mt-5 ">
    <div class="row g-0 align-items-center d-flex justify-content-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center ">
            <h2 class="fw-bold mb-5">Edit Product</h2>
            <form action="/admin/edit/<%= productData?.name %>" method="post" enctype="multipart/form-data"> 

              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div class="row">
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input value="<%= productData.name %>" type="name" id="name" name="name" placeholder="Name" class="form-control" />
                    <label class="form-label" for="name"></label><br>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input value="<%= productData?.brand %>" type="brand" id="brand" name="brand" placeholder="Brand" class="form-control" />
                    <label class="form-label" for="brand"></label><br>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input value="<%= productData?.description %>" type="text" id="description" name="description" placeholder="Description" class="form-control" />
                    <label class="form-label" for="description"></label><br>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input value="<%= productData?.stock %>" type="text" id="stock" name="stock" placeholder="Description" class="form-control" />
                    <label class="form-label" for="stock"></label><br>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="form-outline mb-4">
                    <select value="<%= categoriesData?.category %>" class="form-select" aria-label="Default select example" id="category" name="category" >
                      <option name="categoy" disabled selected> <%= productData.category %></option>
                      <% categoriesData.forEach((category)=>{%>
                        <option>
                          <%= category?.categories %>
                          </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input value="<%= productData?.price %>" type="number" id="price" name="price" placeholder="Price" class="form-control" />
                    <label class="form-label" for="price"></label><br>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input value="<%= productData?.size %>" type="text" id="size" name="size" placeholder="Size" class="form-control" />
                    <label class="form-label" for="size"></label><br>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <div class="form-outline">
                    <input value="/admin/products/<%= productData?.name %>.jpg" type="file" id="image" name="image" placeholder="Images" class="form-control" />
                    <label class="form-label" for="image"></label><br>
                  </div>
                </div>
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">
                Submit
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>