<!-- cart -->
<div class="cart-section mt-150 mb-150">
    <div class="container">
        <% if(countInCart!==0){ %>
            <div class="row">
                <div class="col-lg-8 col-md-12">
                    <div class="cart-table-wrap">
                        <table class="cart-table">
                            <thead class="cart-table-head">
                                <tr class="table-head-row">
                                    <th class="product-remove">Remove</th>
                                    <th class="product-image">Product Image</th>
                                    <th class="product-name">Name</th>
                                    <th class="product-price">Price/kg</th>
                                    <th class="product-quantity">Quantity in kg</th>

                                </tr>
                            </thead>
                            <tbody>
                                <% productData.forEach((product)=>{ %>
                                    <tr class="table-body-row">
                                        <td class="product-remove"><button
                                                onclick="removeProduct('<%= product._id %>','<%= product.productDetail._id %>')"><i
                                                    class="far fa-window-close"></i></button>
                                        </td>
                                        <td class="product-image"><img
                                                src="/adminimages/<%= product.productDetail._id %>.jpg" alt=""></td>
                                        <td class="product-name">
                                            <%= product.productDetail.product_name %>
                                        </td>
                                        <td class="product-price">
                                            ₹ <%= product.productDetail.price%>
                                        </td>
                                        <td class="product-quantity">
                                            <div class="container d-flex">

                                                <button style="height: 30px;" class="js-btn-minus  mr-3"
                                                    onclick="changeQuantity('<%= product._id %>','<%= product.productDetail._id %>',-1)">-</button>

                                                <p id="<%= product.productDetail._id %>" min="0" name="quantity">
                                                    <%= product.productQuantity%>
                                                </p>

                                                <button style="height: 30px;" class="cart-item-count ml-3 mr-3"
                                                    onclick="changeQuantity('<%= product._id %>','<%= product.productDetail._id %>',1)">+</button>
                                            </div>
                                        </td>

                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="total-section">
                        <table class="total-table">
                            <thead class="total-table-head">
                                <tr class="table-total-row">
                                    <th>Total</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="total-data">
                                    <td><strong>Subtotal: </strong></td>

                                    <td>
                                        <p id="sum">₹ <%=sum%>
                                        </p>
                                    </td>

                                </tr>
                                <tr class="total-data">
                                    <td><strong>Shipping: </strong></td>

                                    <td>0 (free delivary)</td>

                                </tr>
                                <tr class="total-data">
                                    <td><strong>Total: </strong></td>

                                    <td>
                                        <p id="netamount">₹ <%=sum%>
                                        </p>
                                    </td>

                                </tr>
                            </tbody>
                        </table>
                        <div class="cart-buttons">
                            <a href="/shop" class="boxed-btn black">Continue shopping</a>
                            <a href="/checkout" class="boxed-btn black">Check Out</a>

                        </div>
                    </div>

                </div>
            </div>
            <% }else{ %>
                <div class="d-flex align-items-center justify-content-center">
                    <h2 class="text-danger">Oops..! Your cart is empty</h2>
                </div>
                <div class="d-flex align-items-center justify-content-center mt-5">
                    <a class="btn btn-success" href="/shop">Shop now</a>
                </div>

                <% } %>
    </div>
</div>
<!-- end cart -->